{
  "name": "library-management-api",
  "version": "1.0.0",
  "description": "A simple and efficient library management system API",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "db:migrate": "node src/database/migrate.js",
    "db:seed": "node src/database/seed.js",
    "migrate": "node src/database/migrate-cli.js",
    "migrate:up": "node src/database/migrate-cli.js up",
    "migrate:down": "node src/database/migrate-cli.js down",
    "migrate:status": "node src/database/migrate-cli.js status",
    "migrate:create": "node src/database/migrate-cli.js create",
    "migrate:rollback": "node src/database/migrate-cli.js rollback",
    "db:demolish": "node src/database/demolish-and-rebuild.js demolish",
    "db:fresh": "node src/database/demolish-and-rebuild.js fresh",
    "db:fresh-schema": "node src/database/demolish-and-rebuild.js fresh-schema",
    "db:rebuild": "node src/database/demolish-and-rebuild.js rebuild-migrations",
    "db:rebuild-schema": "node src/database/demolish-and-rebuild.js rebuild-schema",
    "db:status": "node src/database/demolish-and-rebuild.js status"
  },
  "keywords": [
    "library",
    "management",
    "api",
    "books",
    "borrowers"
  ],
  "author": "Library Management Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "pg-pool": "^3.6.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/app.js",
      "!src/database/migrate.js",
      "!src/database/seed.js"
    ]
  }
}
